<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:layoutDirection="rtl"
    android:id="@+id/selectimage_dialog_layout_cardView_mainLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="لطفا عکس مورد نظر خود را انتخاب کنید"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/medium_font"
            android:layout_marginTop="5dp"
            android:id="@+id/selectimage_dialog_layout_textView_message"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layoutDirection="rtl"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginLeft="20dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    app:srcCompat="@drawable/gallery"
                    android:id="@+id/selectimage_dialog_layout_imageView_gallery"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="@dimen/small_font"
                    android:textColor="@android:color/black"
                    android:text="گالری"
                    android:id="@+id/selectimage_dialog_layout_textView_gallery"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginRight="20dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/camera"
                    android:clickable="true"
                    android:id="@+id/selectimage_dialog_layout_imageView_camera"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="@dimen/small_font"
                    android:textColor="@android:color/black"
                    android:text="دوربین"
                    android:id="@+id/selectimage_dialog_layout_textView_camera"/>

            </LinearLayout>

        </LinearLayout>



    </LinearLayout>

</LinearLayout>